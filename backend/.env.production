NODE_ENV=production
PORT=5000

# Database (Supabase)
DB_HOST=db.example.supabase.co
DB_USER=postgres
DB_PASSWORD=your_supabase_password
DB_NAME=postgres
DB_PORT=5432

# JWT Security (Generate random 32+ character strings)
JWT_SECRET=hutefast_jwt_secret_min_32_chars_production_key_here_2026
REFRESH_TOKEN_SECRET=hutefast_refresh_token_min_32_chars_production_key_2026

# Encryption
ENCRYPTION_KEY=hutefast_encryption_key_min_32_chars_production_2026

# Frontend
FRONTEND_URL=https://hutefast.vercel.app

# MoMo Payment (Get from MTN)
MOMO_API_KEY=momo_api_key_production
MOMO_API_SECRET=momo_api_secret_production
MOMO_API_URL=https://momo-api.example.com

# Twilio SMS
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Email Service
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info
